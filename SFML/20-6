void getClick(RenderWindow *window,int mode);

int randomQuestion(int a, int b){
	srand(time(NULL)); 
	int x = a + rand()%(b-a+1);
	return x;
}

int randomAnswer(int a, int b, int c,int d, int e, int f){
	srand(time(NULL)); 
	int y;
	y = a + rand()%(b-a+1);
	while(y == c || y == d || y == e || y == f){
		y = a + rand()%(b-a+1);
	}
	return y;
}


