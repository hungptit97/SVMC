    // Câu Lệnh Tạo Nhạc nền
	Music NhacDao;
	NhacDao.openFromFile("xoso.wav");
	NhacDao.setVolume(20);
    NhacDao.play();
	NhacDao.setLoop(true);

	Music Winner;
