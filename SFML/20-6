	Music NhacChoi;
	NhacChoi.openFromFile("nhacNenKhiChoiGame.wav");
	NhacChoi.setVolume(20);
	NhacChoi.setLoop(true);

	// Câu Lệnh Tạo Hiệu ứng âm thanh
	SoundBuffer click,corect,incorect,soundWin,laugh;
	click.loadFromFile("ClickButton_ChonNutBatKi.wav");
	corect.loadFromFile("Correct_ChonDungDapAn.wav");
	incorect.loadFromFile("False_ChonSaiDapAn.wav");
	soundWin.loadFromFile("winner.wav");
    laugh.loadFromFile("cuoiKhiThua.wav");
	Sound Click(click);
	Sound Corect(corect);
	Sound Incorect(incorect);
	Sound SoundWin(soundWin);
    Sound Laugh(laugh);
	

	int mode=1; // temp dùng để lựa chọn chế độ click chuột -> lên hàm getClick để xem tiếp

	while(window.isOpen()){
		Event e;
		while (window.pollEvent(e))
		{
			if (e.type == Event::Closed)
				window.close();
		}
		window.clear(Color::Black);		
		window.draw(Menu);		// vẽ ra ảnh menu
        getClick(&window,mode); 
        if(Mmouse == SCORE){	// nếu chọn button Score thì in ra hình ảnh Score
			Click.play();
			textScore.setString(to_string(Max-1));  
            window.draw(Score);
            window.draw(textScore); 
			if(tempAvatar == "nv1.png"){	Nv1.setPosition(20,100);	window.draw(Nv1);	}		
			if(tempAvatar == "nv2.png"){	Nv2.setPosition(20,100);	window.draw(Nv2);	}			
			if(tempAvatar == "nv3.png"){	Nv3.setPosition(20,100);	window.draw(Nv3);	}			
			if(tempAvatar == "nv4.png"){	Nv4.setPosition(20,100);	window.draw(Nv4);	}								
			if(tempAvatar == "nv5.png"){	Nv5.setPosition(20,100);	window.draw(Nv5);	}
			if(tempAvatar == "nv6.png"){	Nv6.setPosition(20,100);	window.draw(Nv6);	}
			window.display();
			while(Mmouse == SCORE){
				Event e;
				while (window.pollEvent(e)){
					if (e.type == Event::Closed)
						window.close();
				}
				
				getClick(&window,4);
			}
            Start = 0;
        }
		if(Mmouse == IMFORMATION){	// nếu chọn button Score thì in ra hình ảnh Score
			Click.play();
			window.draw(Imformation);
			window.display();
			while(Mmouse == IMFORMATION){
				Event e;
				while (window.pollEvent(e)){
					if (e.type == Event::Closed)
						window.close();
				}
				getClick(&window,4);
			}
            Start = 0;
        }
		if(Mmouse == SETTING){	// nếu chọn button Score thì in ra hình ảnh Score
			Click.play();
			window.draw(Setting);
			window.display();
			
			while(Mmouse == SETTING){
				window.draw(Setting);
				Event e;
				while (window.pollEvent(e)){
					if (e.type == Event::Closed)
						window.close();
				}

				getClick(&window,5);
				if(nhac == 0){   NhacDao.setVolume(0);	 NhacChoi.setVolume(0);   Delete2.setPosition(246,168); window.draw(Delete2);}
				if(nhac == 1){   NhacChoi.setVolume(20);	 NhacDao.setVolume(20);   Delete2.setPosition(5000,1000);window.draw(Delete2); }

				if(amThanh == 0){ Click.setVolume(0);	  Corect.setVolume(0);	Incorect.setVolume(0); SoundWin.setVolume(0); Laugh.setVolume(0);     Delete2.setPosition(246,290); window.draw(Delete2); }
				if(amThanh == 1){ Click.setVolume(50);	  Corect.setVolume(50);	Incorect.setVolume(50); SoundWin.setVolume(50); Laugh.setVolume(50);  Delete2.setPosition(1000,1000); window.draw(Delete2); }
				window.display();
			}
			
            Start = 0;
			
        }
        if(Mmouse == BACK){
			Click.play();
            Mmouse = 0;
            window.draw(Menu);
            Start = 0;
        }
        if(Mmouse == PLAY){
			Click.play();
			window.draw(Intro);
			window.display();
			Sleep(500);
			next1 = 0;
			while(next1 == 0){
				Event e;
				while (window.pollEvent(e)){
					if (e.type == Event::Closed)
						window.close();
				}
				getClick(&window,6);
			}
			Click.play();
            window.draw(Face); 
			window.display();
			Sleep(200);
			Person = 0;
			helpTemp = 0;
			help1 = 0;
			Select = 0;
			tempMax = 1;
			countPlay = 1;
			next1 = 0;
			while(Mmouse == PLAY){
				
				Event e;
				while (window.pollEvent(e)){
					if (e.type == Event::Closed)
						window.close();
				}
				getClick(&window,2);
				Click.play();
				// lựa chọn nhân vật 
				switch (Person){
					case NV1:	Name = "nv1.png"; Start = 1; break;
					case NV2:	Name = "nv2.png";  Start = 1; break;
					case NV3:	Name = "nv3.png";  Start = 1; break;
					case NV4:	Name = "nv4.png"; Start = 1; break;
					case NV5:	Name = "nv5.png";   Start = 1; break;
					case NV6:	Name = "nv6.png"; Start = 1; break;		
				}
			}
			Sleep(200);
        }	
		window.display();
		if(Start == 1){		// lựa chọn xong nhận vật sẽ nhảy vào if và thoát khỏi vòng lặp
			Start = 0;
			while(window.isOpen()){
				NhacDao.pause();
				NhacChoi.play();
				Event e;
				while (window.pollEvent(e))
				{
					if (e.type == Event::Closed)
						window.close();
				}

				window.draw(Play);	// in ra hình ảnh chơi
				if(Name == "nv1.png"){	Nv1.setPosition(10,15);	window.draw(Nv1);	}			
				if(Name == "nv2.png"){	Nv2.setPosition(10,15);	window.draw(Nv2);	}			
				if(Name == "nv3.png"){	Nv3.setPosition(10,15);	window.draw(Nv3);	}			
				if(Name == "nv4.png"){	Nv4.setPosition(10,15);	window.draw(Nv4);	}								
				if(Name == "nv5.png"){	Nv5.setPosition(10,15);	window.draw(Nv5);	}
				if(Name == "nv6.png"){	Nv6.setPosition(10,15);	window.draw(Nv6);	}
		

				////// Cau hoi 
				cout<<tempMax;
				if(tempMax >= 0 && tempMax < 3)	tempQuestion = randomQuestion(51,78);
				else if(tempMax>=3 && tempMax<=7) tempQuestion = randomQuestion(20,51);
				else tempQuestion = randomQuestion(1,20);
				cout<<tempQuestion<<endl;

				
                    String dong1="";
                    String dong2="";
					int mark=0;
                    //String dong3 = "";
                    if(cauhoi.x[tempQuestion].getSize()>60  ){
						
						for(int i=0;i<60;i++){
							dong1 += cauhoi.x[tempQuestion][i];
						}
						for(int i=60;i<cauhoi.x[tempQuestion].getSize()-1;i++){
							dong2 += cauhoi.x[tempQuestion][i];
						}
						 
						 textQuestion.setString(dong1);
                         textQuestion.setPosition(50,180);
                         window.draw(textQuestion);

						 textQuestion.setString(dong2);
                         textQuestion.setPosition(50,220);
                         window.draw(textQuestion);
						 mark=1;
					}
					else{
						 textQuestion.setString(cauhoi.x[tempQuestion]);
                         textQuestion.setPosition(50,180);
                         window.draw(textQuestion);
						 mark=0;
					}
						

				////// Cau tra loi 
				tempAnswerA = randomAnswer(1,4,-1,-1,-1,-1);
				tempAnswerB = randomAnswer(1,4,tempAnswerA,-1,-1,-1);
				tempAnswerC = randomAnswer(1,4,tempAnswerA,tempAnswerB,-1,-1);
				tempAnswerD = randomAnswer(1,4,tempAnswerA,tempAnswerB,tempAnswerC,-1);
		
				answerA.setString(traloi.y[tempQuestion][tempAnswerA]);	// A
				answerA.setPosition(109,350);
				window.draw(answerA);

				answerB.setString(traloi.y[tempQuestion][tempAnswerB]);	// B
				answerB.setPosition(555,350);
				window.draw(answerB);

				answerC.setString(traloi.y[tempQuestion][tempAnswerC]);	// C
				answerC.setPosition(109,440);
				window.draw(answerC);

				answerD.setString(traloi.y[tempQuestion][tempAnswerD]);	// D
				answerD.setPosition(555,440);
				window.draw(answerD);
				
				clock.setString(L"Câu " + to_string(tempMax));
				window.draw(clock);
				if(helpTemp){
					
					window.draw(Delete);
				}
				window.display();
				cout<<tempAnswerA<<"\t"<<tempAnswerB<<"\t"<<tempAnswerC<<"\t"<<tempAnswerD<<"\t"<<endl;
				
				while(Select==0){
					Event e;
					while (window.pollEvent(e))
					{
						if (e.type == Event::Closed)
							window.close();
					}

					getClick(&window,3);
                    if(help1 == 1 && helpTemp ==0){
						 helpTemp=1;
						 Click.play();
						 window.draw(Delete);
                         window.draw(Play); 
						 window.draw(clock);
						 clock.setString(L"Câu " + to_string(tempMax));
							if(Name == "nv1.png"){	Nv1.setPosition(10,15);	window.draw(Nv1);	}			
							if(Name == "nv2.png"){	Nv2.setPosition(10,15);	window.draw(Nv2);	}			
							if(Name == "nv3.png"){	Nv3.setPosition(10,15);	window.draw(Nv3);	}			
							if(Name == "nv4.png"){	Nv4.setPosition(10,15);	window.draw(Nv4);	}								
							if(Name == "nv5.png"){	Nv5.setPosition(10,15);	window.draw(Nv5);	}
							if(Name == "nv6.png"){	Nv6.setPosition(10,15);	window.draw(Nv6);	}
						 if(!mark){
							 textQuestion.setString(cauhoi.x[tempQuestion]);
							 textQuestion.setPosition(50,180);
							 window.draw(textQuestion);
							 
						 }
						 else{
							 textQuestion.setString(dong1);
							 textQuestion.setPosition(50,180);
							  window.draw(textQuestion);
							 textQuestion.setString(dong2);
							 textQuestion.setPosition(50,220);
							 window.draw(textQuestion);
							 
						 }
						
                         if(tempAnswerA == 1 || tempAnswerA == 4){
                     
							answerA.setString(traloi.y[tempQuestion][tempAnswerA]);	
							answerA.setPosition(109,350);
							window.draw(answerA);
                        }
						 else{
							answerA.setString(L"Chọn thử xem :D");	
							answerA.setPosition(109,350);
							window.draw(answerA);
						 }
                        if(tempAnswerB== 1 || tempAnswerB == 4){
							answerB.setString(traloi.y[tempQuestion][tempAnswerB]);	// B
							answerB.setPosition(555,350);
							window.draw(answerB);
                        }
						else{
							answerB.setString(L"Chọn thử xem :D");	
							answerB.setPosition(555,350);
							window.draw(answerB);
						}
                        if(tempAnswerC == 1 || tempAnswerC == 4){
                            answerC.setString(traloi.y[tempQuestion][tempAnswerC]);	// C
							answerC.setPosition(109,440);
							window.draw(answerC);                          
                        }
						else{
							answerC.setString(L"Chọn thử xem :D");	
							answerC.setPosition(109,440);
							window.draw(answerC);
						}
                        if(tempAnswerD == 1 || tempAnswerD == 4){
							answerD.setString(traloi.y[tempQuestion][tempAnswerD]);	// D
							answerD.setPosition(555,440);
							window.draw(answerD);
                        }
						else{
							answerD.setString(L"Chọn thử xem :D");	
							answerD.setPosition(555,440);
							window.draw(answerD);
						}
						
						if(helpTemp){
							
							window.draw(Delete);
						}
                        window.display();
                        help1 = 0;
                    }
					
					if(Select == A){
						Click.play();
						if(tempAnswerA == 1){
							NhacChoi.pause();
							Corect.play();
							window.draw(Background);
							
							window.draw(ImageWin);
							window.display();
							tempMax ++;
							Sleep(1000);
							NhacChoi.play();
						}
						else{
							NhacChoi.pause();
                            Laugh.play();
							window.draw(Background);
							win.setPosition(200,100);
							win.setString(L"   KÉM LẮM");
							window.draw(win);
							win.setPosition(40,200);
							win.setString(L"SAI RỒI CHƠI LẠI ĐI");
							window.draw(win);
							window.display();
							Sleep(5000);
                            Laugh.pause();
							NhacDao.play();
							Mmouse = BACK;
							break;
						}
						Select = -1;
					} 
			
					if(Select == B){
						Click.play();
						if(tempAnswerB == 1){
							NhacChoi.pause();
							Corect.play();
							window.draw(Background);							
							window.draw(ImageWin);
							window.display();
							tempMax ++;
							Sleep(1000);
						}
						else{
							NhacChoi.pause();					
                            Laugh.play();
							window.draw(Background);
							win.setPosition(200,100);
							win.setString(L"   KÉM LẮM");
							window.draw(win);
							win.setPosition(40,200);
							win.setString(L"SAI RỒI CHƠI LẠI ĐI");
							window.draw(win);
							window.display();
							Sleep(5000);
                            Laugh.pause();
							NhacDao.play();
							Mmouse = BACK;
							break;
						}
						Select = -1;
					} 
					if(Select == C){
						Click.play();
						if(tempAnswerC == 1){
							NhacChoi.pause();
							Corect.play();
							window.draw(Background);
							window.draw(ImageWin);
							window.display();
							tempMax ++;
							Sleep(1000);
						}
						else{
							NhacChoi.pause();						
                            Laugh.play();
							window.draw(Background);
							win.setPosition(200,100);
							win.setString(L"   KÉM LẮM");
							window.draw(win);
							win.setPosition(40,200);
							win.setString(L"SAI RỒI CHƠI LẠI ĐI");
							window.draw(win);
							window.display();
							Sleep(5000);
                            Laugh.pause();
							NhacDao.play();
							Mmouse = BACK;
							break;
						}
						Select = -1;
					} 
					if(Select == D){
						Click.play();
						if(tempAnswerD == 1){
							NhacChoi.pause();
							Corect.play();
							window.draw(Background);
							window.draw(ImageWin);							
							window.display();							
							tempMax ++;
							Sleep(1000);

						}
						else{
							NhacChoi.pause();						
                            Laugh.play();
							window.draw(Background);
							win.setPosition(200,100);
							win.setString(L"   KÉM LẮM");
							window.draw(win);
							win.setPosition(40,200);
							win.setString(L"SAI RỒI CHƠI LẠI ĐI");
							window.draw(win);
							window.display();
							Sleep(5000);
							NhacDao.play();
							Mmouse = BACK;
                            Laugh.pause();
							break;
						}
						Select = -1;
					}
					if(Max<tempMax){
						Max = tempMax;
						tempAvatar = Name;
					}
					if(tempMax > 10){
						window.draw(Phadao);
						Winner.play();
						NhacChoi.pause();
						window.display();
						next1 = 0;
						while(next1 == 0){
							Event e;
							while (window.pollEvent(e)){
								if (e.type == Event::Closed)
									window.close();
							}
							getClick(&window,6);
						}
						
						Mmouse = BACK;
						NhacDao.play();
						Select = -1;
						tempMax = 1;
						Winner.pause();
					}
				
					if(Mmouse == BACK){
						Click.play();
						NhacChoi.pause();
						NhacDao.play();
						Select = -1;
						break;
					}
				}		
				Select = 0;
				if(Mmouse == BACK){
					Mmouse = 0;
					Select = -1;
					break;
				}
			}
			
		}
		
		mode = 1;
	}
	
		return 0;
}

void getClick(RenderWindow *window,int mode)
{
	// nhận dữ liệu từ chuột
	// có 3 chế độ
	Mouse mouse;
	int x = mouse.getPosition(*window).x;
	int y = mouse.getPosition(*window).y;
	// chế độ 1 dùng cho màn hinh menu , score và imformation
	if(mode == 1){
		if(mouse.isButtonPressed(Mouse::Left) && x>=380 && x<=625 && y>=172 && y<=257){
			 Mmouse = PLAY;
			 
		}
		if(mouse.isButtonPressed(Mouse::Left) && x>=380 && x<=625 && y>=280 && y<=369){
			  Mmouse = SCORE;
		}
		if(mouse.isButtonPressed(Mouse::Left) && x>=375 && x<=622 && y>=395 && y<=480){
			  Mmouse = IMFORMATION;
		}
		if(mouse.isButtonPressed(Mouse::Left) && x>=938 && x<=WIDTH && y>=470 && y<=500){
			 Mmouse = BACK;
		}
		if(mouse.isButtonPressed(Mouse::Left) && x>=710 && x<=787 && y>=407 && y<=473){
			 Mmouse = SETTING;
		}
	}

    // chế độ 2 dùng cho chọn nhân vật
	if(mode == 2){
		if(mouse.isButtonPressed(Mouse::Left) && x>=9 && x<=165 && y>=18 && y<=156){
			Person =  NV1;
			Mmouse = 0;
		}
		if(mouse.isButtonPressed(Mouse::Left) && x>=9 && x<=165 && y>=185 && y<=323){
			Person =  NV2;
			Mmouse = 0;
		}
		if(mouse.isButtonPressed(Mouse::Left) && x>=9 && x<=351 && y>=370 && y<=490){
			Person =  NV3;
			Mmouse = 0;
		}
		if(mouse.isButtonPressed(Mouse::Left) && x>=510 && x<=666 && y>=18 && y<=156){
			Person =  NV4;
			Mmouse = 0;
		}
		if(mouse.isButtonPressed(Mouse::Left) && x>=510 && x<=666 && y>=185 && y<=323){
			Person =  NV5;
			Mmouse = 0;
		}
		if(mouse.isButtonPressed(Mouse::Left) && x>=510 && x<=666 && y>=370 && y<=490){
			Person =  NV6;
			Mmouse = 0;
		}
		
    }

	// chế độ cho màn hình chơi
	if(mode == 3){
		if(mouse.isButtonPressed(Mouse::Left) && x>=98 && x<=410 && y>=336 && y<=390){
			Select = A;
			cout<<"A"<<endl;
		}
		if(mouse.isButtonPressed(Mouse::Left) && x>=556 && x<=865 && y>=340 && y<=383){
			Select = B;
			cout<<"B"<<endl;
		}
		if(mouse.isButtonPressed(Mouse::Left) && x>=104 && x<=442 && y>=415 && y<=473){
			Select = C;
			cout<<"C"<<endl;
		}
		if(mouse.isButtonPressed(Mouse::Left) && x>=554 && x<=860 && y>=420 && y<=467){
			Select = D;
			cout<<"D"<<endl;
		}
		if(mouse.isButtonPressed(Mouse::Left) && x>=910 && x<=986 && y>=454 && y<=486){
			 Mmouse = BACK;
		}
        if(mouse.isButtonPressed(Mouse::Left) && x>=923 && x<=977 && y>=5 && y<=60){
			 help1 = 1;
		}
	}

	// chế độ click chuột cho khung Score và imformation
		if(mode == 4){
			if(mouse.isButtonPressed(Mouse::Left) && x>=929 && x<=WIDTH && y>=470 && y<=500){
				 Mmouse = BACK;
			}
		}
	// chế độ click cho setting
		if(mode == 5){
			if(mouse.isButtonPressed(Mouse::Left) && x>=929 && x<=WIDTH && y>=470 && y<=500){
				 Mmouse = BACK;
			}
			if(mouse.isButtonPressed(Mouse::Left) && x>=231 && x<=331 && y>=185 && y<=271){
				if(nhac == 0) nhac = 1;
				else nhac = 0;
				 Sleep(300);
				 Mmouse = SETTING;
				 cout<<nhac<<endl;
			}
			if(mouse.isButtonPressed(Mouse::Left) && x>=233 && x<=330 && y>=312 && y<=398){
				if(amThanh == 0) amThanh =1;
				else amThanh = 0;
				Sleep(300);
				Mmouse = SETTING;
				cout<<amThanh<<endl;
			}
		}
		if(mode == 6){
			if(mouse.isButtonPressed(Mouse::Left) && x>=600 && x<=707 && y>=411 && y<=454){
				 next1 = 1;
			}
		}
	// Hiện tọa độ x,y
    if(mouse.isButtonPressed(Mouse::Left) && x>=0 && x<=WIDTH && y>=0 && y<=HEIGHT){
        cout<<x<<"\t"<<y<<endl;
    }
   
}

